{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "checkJs": false,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "es2017"
    ],
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "target": "es6"
  },
  "include": ["./src/**/*"]
}